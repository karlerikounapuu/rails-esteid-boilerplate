<h2>Let's get to know each other</h2>

<%= form_for(@user, url: wait_for_handshake_path, html: { autocomplete: "off", class: "form-horizontal center" }) do |f| %>
<div class="form-group">
  <span>Authenticate yourself via</span>
</div>
 <div class="form-group">
  <div class="col-md-8 mx-auto">
    <div class="btn-group btn-group-toggle" data-toggle="buttons">
      <label class="btn btn-primary active">
              <%= radio_button_tag :channel, 'mobileid', true, id: 'mobileid' %> Mobile-ID
      </label>
      <label class="btn btn-primary">
              <%= radio_button_tag :channel, 'smartid', false, id: 'smartid' %> Smart-ID
      </label>
      <label class="btn btn-primary">
              <%= radio_button_tag :channel, 'idcard', false, id: 'idcard' %> ID-card
      </label>
    </div>
  </div>
 </div>
  <div class="form-group">
    <span>by credentials</span>
  </div>
  <div class="form-group">
    <div class="input-group col-md-8 mx-auto">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">EE  </span>
      </div>
      <%= f.number_field :personal_id, autofocus: true, autocomplete: nil, class: "form-control", placeholder: 'Identity code', min: 0 %>
    </div>
  </div>

  <div class="form-group">
    <div class="input-group col-md-8 mx-auto">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon2">+372</span>
      </div>
      <%= f.number_field :mid_phone, autofocus: true, autocomplete: nil, class: "form-control", placeholder: 'Phone number' %>
    </div>
  </div>

 <div class="form-group">
  <div class="col-md-8 mx-auto">
    <%= f.submit "Proceed", class: 'btn btn-primary btn-block' %>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>
