<h2>Let's get to know each other</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { autocomplete: "off", class: "form-horizontal center" }) do |f| %>
<div class="form-group">
  <span>Authenticate yourself via</span>
</div>
 <div class="form-group">
  <div class="col-md-8 mx-auto">
    <div class="btn-group btn-group-toggle" data-toggle="buttons">
      <label class="btn btn-primary active">
        <input type="radio" name="channel" id="smartid" autocomplete="off" checked> Smart-ID
      </label>
      <label class="btn btn-primary">
        <input type="radio" name="channel" id="mobileid" autocomplete="off"> Mobile-ID
      </label>
      <label class="btn btn-primary">
        <input type="radio" name="channel" id="idcard" autocomplete="off"> ID Card
      </label>
    </div>
  </div>
 </div>
  <div class="form-group">
    <span>by credentials</span>
  </div>
  <div class="form-group">
    <div class="input-group col-md-8 mx-auto">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">EE  </span>
      </div>
      <%= f.number_field :email, autofocus: true, autocomplete: nil, class: "form-control", placeholder: 'Identity code', min: 0 %>
    </div>
  </div>

  <div class="form-group">
    <div class="input-group col-md-8 mx-auto">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon2">+372</span>
      </div>
      <%= f.number_field :password, autofocus: true, autocomplete: nil, class: "form-control", placeholder: 'Phone number' %>
    </div>
  </div>

 <div class="form-group">
  <div class="col-md-8 mx-auto">
    <%= f.submit "Proceed", class: 'btn btn-primary btn-block' %>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>
